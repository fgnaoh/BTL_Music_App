    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/passwordConfirmResetInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textColorHint="#d0d1d4"
        app:hintTextColor="#d0d1d4"
        app:cursorColor="#d0d1d4"
        android:hint="@string/confirm_password"
        app:passwordToggleEnabled="true"
        app:passwordToggleDrawable="@drawable/eye_icon"
        app:passwordToggleTint="#d0d1d4"

        android:background="@drawable/edittext_background"
        app:layout_constraintEnd_toEndOf="@+id/passwordResetInput"
        app:layout_constraintStart_toStartOf="@+id/passwordResetInput"
        app:layout_constraintTop_toBottomOf="@+id/passwordResetInput" >

