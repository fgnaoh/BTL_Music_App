<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#181b2c"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.UpdateUserFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/closeUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/update_account"
            android:layout_marginLeft="20dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16dp"


            />
        <Button
            android:id="@+id/luuUserBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:layout_marginLeft="40dp"
            />
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp">
    <androidx.cardview.widget.CardView
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:cardCornerRadius="80dp"
        app:cardElevation="0dp"
        android:backgroundTint="#d1d1d1"
        android:layout_gravity="center"
        android:layout_marginRight="20dp"

        android:layout_marginLeft="30dp"
        >
        <ImageView
            android:id="@+id/imageUser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/round_adb_24"
            />

    </androidx.cardview.widget.CardView>
        <ImageButton
            android:id="@+id/updateImageBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_edit"
            android:layout_gravity="center|bottom"
            android:layout_marginLeft="60dp"
            android:backgroundTint="@color/white"
            />
    </FrameLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="30dp"
        android:textColorHint="#d0d1d4"
        app:hintTextColor="#d0d1d4"
        android:layout_marginEnd="32dp"
        app:cursorColor="#d0d1d4"
        android:hint="@string/user_name"
        android:background="@drawable/edittext_background"
        >

        <EditText
            android:id="@+id/usernameUpdate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="text"
            android:drawablePadding="4dp"
            android:drawableLeft="@drawable/user_icon"
            android:background="#00000000"
            android:textColorHint="#d0d1d4"
            android:textColor="#d0d1d4"
            />
    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>