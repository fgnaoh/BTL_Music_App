<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow Layer -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#66000000"/> <!-- Semi-transparent black for shadow -->
            <corners android:radius="8dp"/>
            <padding android:bottom="4dp" android:left="4dp" android:right="4dp" android:top="4dp"/>
        </shape>
    </item>

    <!-- Background Layer with Border -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/medium_gray"/> <!-- Album background color -->
            <corners android:radius="8dp"/>
            <stroke android:width="2dp" android:color="#44FFFFFF"/> <!-- Semi-transparent white border -->
        </shape>
    </item>
</layer-list>